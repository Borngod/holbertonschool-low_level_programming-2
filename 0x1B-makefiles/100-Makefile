CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC: .c = .o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
all: m.h $(NAME)

.PHONY: all clean oclean fclean re

clean:
	$(RM) -f *~ $(NAME)
oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean
re: oclean all

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
